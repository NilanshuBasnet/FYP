<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finalyearproject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/project_green</item>
        <item name="colorPrimaryVariant">@color/project_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/project_green</item>
        <item name="colorSecondaryVariant">@color/project_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottom_navigation_textappreance"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/cambay_bold</item>
    </style>

    <style name="MyTimePickerDialogTheme" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/project_green</item>
        <item name="colorAccent">@color/project_green</item>
    </style>

</resources>