<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddHabit"
    android:fillViewport="true"
    android:background="#FEFCFE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.031"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cambay_bold"
            android:text="New Habit"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.159"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <Switch
            android:id="@+id/switchSession"
            android:layout_width="62dp"
            android:layout_height="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/cambay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toEndOf="@+id/textViewSession"
            app:layout_constraintTop_toBottomOf="@+id/textViewTimesaDay" />

        <Switch
            android:id="@+id/switchRemainder"
            android:layout_width="62dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/cambay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.868"
            app:layout_constraintStart_toEndOf="@+id/textViewRemainder"
            app:layout_constraintTop_toBottomOf="@+id/switchSession" />

        <Button
            android:id="@+id/btnSaveHabit"
            android:layout_width="286dp"
            android:layout_height="49dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/cambay_bold"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRemainder" />

        <TextView
            android:id="@+id/textViewNotification"
            android:layout_width="160dp"
            android:layout_height="26dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/cambay"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRemainder" />

        <TextView
            android:id="@+id/textViewSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cambay"
            android:text="Session Tracking"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userInputGoal" />

        <TextView
            android:id="@+id/textViewRemainder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/cambay"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSession" />

        <TextView
            android:id="@+id/textViewTimesaDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/cambay"
            android:text="a day"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/userInputCount"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoal" />

        <TextView
            android:id="@+id/textViewGoal"
            android:layout_width="275dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cambay"
            android:text="Goal"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toggleButtonSat" />

        <ToggleButton
            android:id="@+id/toggleButtonWed"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/toogle_button"
            android:fontFamily="sans-serif-medium"
            android:text="Wednesday"
            android:textColor="@drawable/toogle_textcolor"
            android:textOff="Wed"
            android:textOn="Wed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toggleButtonSun" />

        <ToggleButton
            android:id="@+id/toggleButtonThu"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/toogle_button"
            android:fontFamily="sans-serif-medium"
            android:text="Thursday"
            android:textColor="@drawable/toogle_textcolor"
            android:textOff="Thu"
            android:textOn="Thu"
            app:layout_constraintStart_toEndOf="@+id/toggleButtonWed"
            app:layout_constraintTop_toBottomOf="@+id/toggleButtonMon" />

        <ToggleButton
            android:id="@+id/toggleButtonMon"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/toogle_button"
            android:fontFamily="sans-serif-medium"
            android:text="Monday"
            android:textColor="@drawable/toogle_textcolor"
            android:textOff="Mon"
            android:textOn="Mon"
            app:layout_constraintStart_toEndOf="@+id/toggleButtonSun"
            app:layout_constraintTop_toBottomOf="@+id/textViewFrequency" />

        <ToggleButton
            android:id="@+id/toggleButtonSat"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/toogle_button"
            android:fontFamily="sans-serif-medium"
            android:text="Saturday"
            android:textColor="@drawable/toogle_textcolor"
            android:textOff="Sat"
            android:textOn="Sat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toggleButtonWed" />

        <ToggleButton
            android:id="@+id/toggleButtonSun"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/toogle_button"
            android:fontFamily="sans-serif-medium"
            android:text="Sunday"
            android:textColor="@drawable/toogle_textcolor"
            android:textOff="Sun"
            android:textOn="Sun"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFrequency" />

        <ToggleButton
            android:id="@+id/toggleButtonTue"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/toogle_button"
            android:fontFamily="sans-serif-medium"
            android:text="Tuesday"
            android:textAllCaps="true"
            android:textColor="@drawable/toogle_textcolor"
            android:textOff="Tue"
            android:textOn="Tue"
            app:layout_constraintStart_toEndOf="@+id/toggleButtonMon"
            app:layout_constraintTop_toBottomOf="@+id/textViewFrequency" />

        <ToggleButton
            android:id="@+id/toggleButtonFri"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/toogle_button"
            android:fontFamily="sans-serif-medium"
            android:text="Friday"
            android:textColor="@drawable/toogle_textcolor"
            android:textOff="Fri"
            android:textOn="Fri"
            app:layout_constraintStart_toEndOf="@+id/toggleButtonThu"
            app:layout_constraintTop_toBottomOf="@+id/toggleButtonTue" />

        <EditText
            android:id="@+id/userInputGoal"
            android:layout_width="53dp"
            android:layout_height="55dp"
            android:layout_marginStart="28dp"
            android:backgroundTint="#e2e2e2"
            android:ems="10"
            android:fontFamily="@font/cambay"
            android:inputType="number"
            android:maxLength="2"
            android:digits="1234567890"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoal" />

        <TextView
            android:id="@+id/textViewFrequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/cambay"
            android:text="Frequency"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserInputHabitName" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="373dp"
            android:layout_height="31dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/cambay"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBack" />

        <EditText
            android:id="@+id/UserInputHabitName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:backgroundTint="#e2e2e2"
            android:ems="10"
            android:fontFamily="@font/cambay"
            android:hint="Daily Meditation"
            android:inputType="textPersonName"
            android:maxLength="23"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />

        <EditText
            android:id="@+id/userInputCount"
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:layout_marginStart="28dp"
            android:backgroundTint="#e2e2e2"
            android:ems="10"
            android:fontFamily="@font/cambay"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:text="Times"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/userInputGoal"
            app:layout_constraintTop_toBottomOf="@+id/textViewGoal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
